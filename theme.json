{
	"version": 2,
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"settings": {
		"appearanceTools": true,
		"useRootPaddingAwareAlignments": true,
		"color": {
			"defaultGradients": false,
			"defaultDuotone": false,
			"customGradient": false,
			"customDuotone": false,
			"palette": [
				{
					"slug": "base",
					"color": "#f2f0e8",
					"name": "Base"
				},
				{
					"slug": "contrast",
					"color": "#404040",
					"name": "Contrast"
				},
				{
					"slug": "primary",
					"color": "#989a09",
					"name": "Primary"
				},
				{
					"slug": "secondary",
					"color": "#ecb336",
					"name": "Secondary"
				}
			]
		},
		"layout": {
			"contentSize": "800px",
			"wideSize": "1440px"
		},
		"spacing": {
			"units": [ "px", "em", "rem", "vh", "vw", "%" ],
			"spacingSizes": [
				{
					"name": "S",
					"size": "0.5em",
					"slug": "10"
				},
				{
					"name": "M",
					"size": "1em",
					"slug": "20"
				},
				{
					"name": "L",
					"size": "2em",
					"slug": "30"
				},
				{
					"name": "XL",
					"size": "clamp(2.75em, 4vw, 4em)",
					"slug": "40"
				},
				{
					"name": "XXL",
					"size": "clamp(4em, 6vw, 6em)",
					"slug": "50"
				},
				{
					"name": "XXXL",
					"size": "clamp(5em, 8vw, 8em)",
					"slug": "60"
				}
			]
		},
		"typography": {
			"fontFamilies": [
				{
					"name": "System (Roboto, Segoe UI, Ubuntu)",
					"slug": "system",
					"fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif"
				},
				{
					"name": "System Serif (Times, Georgia, Garamond)",
					"slug": "system-serif",
					"fontFamily": "Times New Roman, Georgia, Garamond, serif"
				}
			],
			"fontSizes": [
				{
					"name": "Small",
					"size": "clamp(0.8em, 1vw, 0.85em)",
					"slug": "small"
				},
				{
					"name": "Medium",
					"size": "1em",
					"slug": "medium"
				},
				{
					"name": "Large",
					"size": "clamp(1.15em, 1.2vw, 1.25em)",
					"slug": "large"
				},
				{
					"name": "Extra Large",
					"size": "clamp(1.3em, 1.4vw, 1.5em)",
					"slug": "x-large"
				},
				{
					"name": "Huge",
					"size": "clamp(1.8em, 1.9vw, 2em)",
					"slug": "huge"
				},
				{
					"name": "Enormous",
					"size": "clamp(2.5em, 3vw, 4em)",
					"slug": "enormous"
				}
			]
		}
	},
	"styles": {
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--system)"
		},
		"color": {
			"background": "var(--wp--preset--color--base)",
			"text": "var(--wp--preset--color--contrast)"
		},
		"blocks": {
			"contact-form-7/contact-form-selector": {
				"css": "& p {margin-top: 0px;} & input { width: 100%;box-sizing: border-box;margin: 5px 0; border-radius: 5px; border: 1px solid #ddd; padding: 10px 15px;} & textarea { font-family: sans-serif; width: 100%;box-sizing: border-box;margin: 5px 0; border-radius: 5px; border: 1px solid #ddd; padding: 10px 15px;} & .wpcf7-submit { width: 100px; border-radius: 20px; border: none; background-color: var(--wp--preset--color--primary); color: white;} & .wpcf7-submit:hover { background-color: var(--wp--preset--color--secondary) } & .wpcf7-response-output {    border-radius: 5px;padding: 10px 15px !important;}"
			}
		}
	},
	"templateParts": [
	{
		"name": "header",
		"area": "header",
		"title": "Header"
	},
	{
		"name": "footer",
		"area": "footer",
		"title": "Footer"
	}
]
}
